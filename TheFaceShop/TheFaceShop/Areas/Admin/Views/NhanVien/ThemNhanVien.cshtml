@model TheFaceShop.Models.NHANVIEN

@{
    ViewBag.Title = "Quản lý nhân viên";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<a href="~/Admin/NhanVien/DanhSachNhanVien" class="d-inline-block"><i class="far fa-list-alt" style="color: black; margin-left:10px"></i></a>
@using (Html.BeginForm("ThemNhanVien", "NhanVien", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal bg-white rounded" style="margin-top: 30px">

    @Html.ValidationSummary(true)
    <div class="form-group row p-3">
        <label class="control-label col-sm-2 h5" for="tenNV">Tên nhân viên</label>
        <div class="col-sm-10"><input type="text" class="form-control" name="tenNV"></div>
    </div>

    <div class="form-group row p-3">
        <label class="control-label col-sm-2 h5" for="gioiTinh">Giới tính</label>
        <div class="col-sm-3">
            @Html.RadioButtonFor(s => s.GIOITINH, "Nữ") Nữ
        </div>
        <div class="col-sm-3">
            @Html.RadioButtonFor(s => s.GIOITINH, "Nam") Nam
        </div>
        <div class="col-sm-4">
            @Html.RadioButtonFor(s => s.GIOITINH, "Khác") Khác
        </div>
    </div>

    <div class="form-group row p-3">
        <label class="control-label col-sm-2 h5" for="sdt">Số điện thoại</label>
        <div class="col-sm-10"><input type="number" class="form-control" name="sdt"></div>
    </div>
    @if (ViewBag.TB != null)
    {
        <div class="form-group row p-3 text-center" style="color: red">
            <p>@ViewBag.TB</p>
        </div>
    }

    <div class="form-group row p-3">
        <label class="control-label col-sm-2 h5" for="matKhau">Mật khẩu</label>
        <div class="col-sm-10"><input type="text" class="form-control" name="matKhau"></div>
    </div>

    <div class="form-group row p-3">
        <input type="submit" class="btn btn-light" id="themNV" value="Thêm" style="background-color:#c1efde" />
    </div>
</div>
}
