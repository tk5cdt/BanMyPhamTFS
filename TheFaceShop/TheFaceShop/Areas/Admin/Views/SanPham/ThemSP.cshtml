@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal bg-white rounded">
        <div class="form-group row p-3">
            <label class="control-label col-sm-2 h5" for="hinhAnh">Ảnh đại diện</label>
            <div class="col-sm-10">
                <div id="anh"></div>
                <input type="file" class="form-control" name="f" id="inputAnh">
            </div>
        </div>

        <div class="form-group row p-3">
            <label class="control-label col-sm-2 h5" for="name">Tên sản phẩm</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="name"></div>
        </div>

        <div class="form-group row p-3">
            <label class="control-label col-sm-2 h5" for="anhSP">Ảnh sản phẩm</label>
            <div class="col-sm-10">
                <div id="listAnhSP"></div>
                <div class="clear:both"></div>
                <input type="button" class="btn btn-light" id="chonAnh" value="Chọn ảnh" style="background-color:#c1efde" />
            </div>
        </div>

        <div class="form-group row p-3">
            <label class="control-label col-sm-2 h5" for="giaBan">Giá bán</label>
            <div class="col-sm-10"><input type="number" class="form-control" name="giaBan"></div>
        </div>

        <div class="form-group row p-3">
            <label class="control-label col-sm-2 h5" for="giaBan">Giá nhập</label>
            <div class="col-sm-10"><input type="number" class="form-control" name="giaNhap"></div>
        </div>

        <div class="form-group row p-3">
            <label class="control-label col-sm-2 h5" for="loaiSP">Loại sản phẩm</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="loaiSP"></div>
            @*@Html.DropDownListFor(, null, "Select Department", new { @class = "form-control" })*@
        </div>

        <div class="form-group row p-3">
            <label class="control-label col-sm-2 h5" for="quyCach">Quy cách đóng gói</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="quyCach"></div>
            @*@Html.DropDownListFor(, null, "Select Department", new { @class = "form-control" })*@
        </div>

        <div class="form-group row p-3">
            <label class="control-label col-sm-2 h5" for="congDung">Công dụng</label>
            <div class="col-sm-10"><input type="text" class="form-control" name="congDung"></div>
        </div>

        <div class="form-group row p-3">
            <label class="control-label col-sm-2 h5" for="noiDung">Nội dung</label>
            <div class="col-sm-10"><textarea class="form-control rounded" id="noiDung"></textarea></div>
        </div>

        <div class="form-group row p-3">
            <input type="button" class="btn btn-light" id="chonAnh" value="Thêm" style="background-color:#c1efde" />
        </div>
    </div>
    }     

@section Scripts{
    <script>CKEDITOR.replace("noiDung")</script>
    }
