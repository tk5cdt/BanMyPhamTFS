@model TheFaceShop.Models.CTDN
@{
    ViewBag.Title = "Quản lý đơn nhập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("TaoDonNhap", "DonNhap", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal bg-white rounded">
    <div class="form-group row p-3">
        <label class="control-label col-sm-2 h6">Tên nhân viên:</label>
        <label class="control-label col-sm-4 h6" for="tenNV">@Session["TENNV"]</label>
        <label class="control-label col-sm-1 h6">Ngày:</label>
        <label class="control-label col-sm-5 h6" for="ngay">@DateTime.Now.ToString("dd/MM/yyyy")</label>
    </div>

    <div class="form-group row p-3">
        <label class="control-label col-sm-2 h5" for="name">Tên sản phẩm</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(model => model.MASP, null, "", new { @class = "form-control", id = "productDropdown" })
            @Html.ValidationMessageFor(model => model.MASP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group row p-3">
        <label class="control-label col-sm-2 h5" for="giaBan">Giá nhập</label>
        <div class="col-sm-4"><input type="number" class="form-control" name="giaNhap" id="giaNhap" readonly></div>

        <label class="control-label col-sm-2 h5" for="soLuong">Số lượng</label>
        <div class="col-sm-4"><input type="number" class="form-control" name="soLuong"></div>
    </div>

    <div class="form-group p-3 text-center">
        <button class="btn btn-light" id="themSP" style="background-color:#c1efde;">Thêm</button>
    </div>

    <table class="table w-full whitespace-no-wrap overflow-hidden rounded-lg shadow-xs border-b">
        <tr style="text-align: center; background-color: #c1efde;">
            <th class="col-4">Tên sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
            <th>Tác vụ</th>
        </tr>
    </table>
    <input type="hidden" id="chuoiTenSP" name="chuoiTenSP" />
    <input type="hidden" id="chuoiSoLuong" name="chuoiSoLuong" />

    <div class="form-group row p-3 d-flex justify-content-end">
        <label class="control-label col-sm-2 h5">Tổng tiền: </label>
        <div class="col-sm-3"><input type="number" name="tongTien" id="tongTien" class="form-control" style="text-align: right" value="0" readonly /></div>
    </div>

    <div class="form-group row p-3">
        <input type="submit" class="btn btn-light" id="tao" value="Tạo" style="background-color:#c1efde" />
    </div>
</div>
}

