@model TheFaceShop.Models.KHACHHANG

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/app.css">
    <link rel="stylesheet" href="~/Content/css/DangNhap.css"
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">

    <title>Đăng nhập</title>
</head>
<body>
    <div id="wrapper">
            @using (Html.BeginForm("DangNhap", "Home", FormMethod.Post, new {@id = "form-login" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal ">
                    <h1 class="form-heading">Đăng nhập</h1>
                    <div class="form-group">
                        <i class="far fa-user"></i>
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-input", @required = "", @placeholder = "Số điện thoại" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                    <input type="submit" value="Đăng nhập" class="form-submit">
                </div>
            }
    </div>
</body>
</html>

